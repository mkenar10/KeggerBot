<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="KeggerBot.CreateAccountPage">
	<ContentPage.Content>
        <ScrollView>
         <StackLayout Padding="20,10,20,10">
        <Image x:Name="logo" WidthRequest="600" HorizontalOptions="StartAndExpand"/>
        <!--Line -->
        <BoxView WidthRequest="100" HeightRequest="2" Color="Black"/>

        <Label Text="First Name:"/>
            <Entry x:Name="fname" />
        <Label Text="Last Name:"/>
            <Entry x:Name="lname" />
        <Label Text="Desired Username:"/>
            <Entry x:Name="uname" />
        <Label Text="Desired password:"/>
            <Entry x:Name="pword" />

            <Button x:Name="saveInfo" Clicked="AddUser_Clicked" Text="Add Me as a user!"/>

        <!--<Button x:Name="button" Text="Pour!" Clicked="pourBeer"/> -->
    </StackLayout>
            </ScrollView>
	</ContentPage.Content>
</ContentPage>
